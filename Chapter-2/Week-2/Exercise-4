public class Example_2_4 {
    public static void main(String[] args) {
        double radius=1.0;
        double area=radius*radius*3.14159;
        System.out.println("The area is "+area+" for radius "+radius);
        radius=2.0;
        area=radius*radius*3.14159;
        System.out.println("The area is "+area+" for radius "+radius);
    }
}
