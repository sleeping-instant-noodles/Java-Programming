import java.util.Scanner;

public class Exercise_3_2_8 {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.println("Please enter the subtotal");
        int subtotal= sc.nextInt();
        System.out.println("Please enter the gratuity rate");
        int gratuityRate=sc.nextInt();
        double gratuity=subtotal*1.0*gratuityRate/100;
        double total=gratuity+subtotal;
        System.out.println("The gratuity is "+gratuity+" and the total is "+total);
    }
}
