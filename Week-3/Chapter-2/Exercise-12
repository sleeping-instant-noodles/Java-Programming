import java.util.Scanner;

public class Exercise_3_2_12 {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.println("please enter the monthly saving amount:");
        int monthlySaving=sc.nextInt();
        double profitRate=1.00417;
        double money=0;
        for (int i=0;i<6;i++){
            money+=monthlySaving;
            money=money*profitRate;
        }
        System.out.println("After the sixth month, the account value is $ "+money);
    }
}
